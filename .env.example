# Database connection string (PostgreSQL).
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Base URL for the OpenAI-compatible API you use (OpenAI, OpenRouter, etc).
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Model name (provider-specific).
# Examples:
OPENAI_MODEL=google/gemini-3-flash-preview

# API key for your OpenAI-compatible provider.
OPENAI_API_KEY=your_api_key_here

# Ingest window in minutes (only articles published within this window are included).
WINDOW_MINUTES=750

# Optional: language hint used by summarization prompts (e.g., "Simplified Chinese").
# LOCAL_LANGUAGE=Simplified Chinese

# Display timezone used in the webapp UI (IANA timezone name).
DISPLAY_TZ=Asia/Shanghai

# Optional: label shown next to formatted timestamps in the UI.
# Leave empty/undefined to omit the parentheses.
# DISPLAY_TZ_LABEL=+8

# Optional: content extraction concurrency limit.
# CONTENT_FETCH_CONCURRENCY=4
