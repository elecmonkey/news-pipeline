{
  "name": "@news-pipeline/database",
  "version": "1.0.0",
  "description": "Database layer for News Pipeline",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "prisma generate && tsc -p tsconfig.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:truncate": "prisma db execute --file prisma/truncate.sql",
    "db:delete-report": "tsx scripts/delete-report.ts",
    "db:cleanup-orphan-events": "tsx scripts/cleanup-orphan-events.ts",
    "db:cleanup-orphan-articles": "tsx scripts/cleanup-orphan-articles.ts"
  },
  "keywords": [
    "database",
    "prisma",
    "postgresql",
    "orm",
    "persistence"
  ],
  "author": "Elecmonkey <elecmonkey@hotmail.com> (https://www.elecmonkey.com)",
  "license": "MIT",
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.2",
    "@prisma/client": "^7.4.2",
    "@prisma/client-runtime-utils": "^7.4.2",
    "pg": "^8.19.0"
  },
  "devDependencies": {
    "@types/pg": "^8.18.0",
    "dotenv": "^17.3.1",
    "prisma": "^7.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.30.3"
}
